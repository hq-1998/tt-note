{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/renderer/src/store/**/*",
    "src/renderer/src/hooks/**/*",
    "src/renderer/src/request/**/*",
    "src/renderer/src/api/**/*",
    "src/renderer/src/components/**/*.tsx",
    "src/renderer/src/components/**/*.vue",
    "src/renderer/src/utils/**/*",
    "src/renderer/src/websocket/**/*"
  ],
  "compilerOptions": {
    "types": ["vite/client"],
    "composite": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "jsx": "preserve",
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
